<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">


        <RelativeLayout
            android:id="@+id/root_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/profile_picture_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <com.priyo.go.CustomView.ProfileImageView
                    android:id="@+id/profile_picture_image_view"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_picture_holder"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/catregory_name"
                    style="@style/TextStylePrimaryMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="2dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:id="@+id/name2"-->
                <!--style="@style/TextStylePrimaryMedium"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/name1"-->
                <!--android:paddingBottom="2dp"-->
                <!--android:singleLine="true"-->
                <!--android:textColor="@color/colorTextPrimary"-->
                <!--android:textSize="14sp" />-->

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12sp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
