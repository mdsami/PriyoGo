<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/people_card_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:minWidth="@dimen/people_card_width"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.priyo.go.CustomView.ProfileImageView
                android:id="@+id/business_profile_image_view"
                android:layout_width="@dimen/horoscope_image_width"
                android:layout_height="@dimen/horoscope_image_width"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/people_image_margin">

            </com.priyo.go.CustomView.ProfileImageView>

            <TextView
                android:id="@+id/business_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:minLines="2"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_extra_smaller" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>