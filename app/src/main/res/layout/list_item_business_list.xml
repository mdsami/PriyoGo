<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    app:cardElevation="2dip">


    <RelativeLayout
        android:id="@+id/root_touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp">

        <com.priyo.go.CustomView.ProfileImageView
            android:id="@+id/profile_picture_image_view"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/catregory_name"
            style="@style/TextStylePrimaryMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/profile_picture_image_view"
            android:layout_toEndOf="@+id/profile_picture_image_view"
            android:layout_toRightOf="@+id/profile_picture_image_view"
            android:paddingBottom="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/catregory_name"
            android:layout_alignStart="@+id/catregory_name"
            android:layout_below="@+id/catregory_name"
            android:gravity="left"
            android:textColor="@color/colorTextPrimary"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>