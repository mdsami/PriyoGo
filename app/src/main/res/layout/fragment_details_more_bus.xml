<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/more_news_titlebar_padding"
    android:paddingRight="@dimen/more_news_titlebar_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/news_rl"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:minHeight="@dimen/more_news_titlebar_height"
        android:background="#EEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/more_button"
            android:layout_centerVertical="true"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/aro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="আরও"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_small_medium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/aro"/>
        </RelativeLayout>



        <TextView
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:text="আরও"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_extra_small"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/root_news"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:id="@+id/progress_rl"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar4" />

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>











