<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/birthday_card_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:minWidth="@dimen/birthday_card_width"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@mipmap/balloon"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.priyo.go.CustomView.ProfileImageView
                    android:id="@+id/profile_image_view"
                    android:layout_width="@dimen/birtday_image_width"
                    android:layout_height="@dimen/birtday_image_width"
                    android:layout_margin="@dimen/birthday_image_margin"
                    android:layout_gravity="center_horizontal">

                </com.priyo.go.CustomView.ProfileImageView>
                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/birthday_text_margin"
                    android:layout_marginRight="@dimen/birthday_text_margin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_extra_small" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/birthday_text_margin"
                    android:layout_marginRight="@dimen/birthday_text_margin"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_extra_smaller" />

            </LinearLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>