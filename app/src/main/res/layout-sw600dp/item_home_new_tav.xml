<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="7dp"
            android:elevation="3dp"
            android:adjustViewBounds="true"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="@dimen/thumbnail_min_size"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:minWidth="@dimen/thumbnail_min_size"
                    android:src="@mipmap/no_image"
                    android:layout_marginTop="@dimen/value15"
                    android:layout_marginLeft="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:id="@+id/news_title_rl"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small_medium"/>

                    <TextView
                        android:id="@+id/update_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#A0A0A0"
                        android:textSize="@dimen/text_size_small"
                        android:drawableLeft="@mipmap/click_h"
                        android:text="  ০৫ নভেম্বর ২০১৬"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:padding="7dp"
            android:elevation="3dp"
            android:adjustViewBounds="true"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/thumbnail1"
                    android:layout_width="@dimen/thumbnail_min_size"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:minWidth="@dimen/thumbnail_min_size"
                    android:src="@mipmap/no_image"
                    android:layout_marginTop="@dimen/value15"
                    android:layout_marginLeft="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/thumbnail1"
                    android:id="@+id/news_title_rl1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/news_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small_medium"/>

                    <TextView
                        android:id="@+id/update_date1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#A0A0A0"
                        android:textSize="@dimen/text_size_small"
                        android:drawableLeft="@mipmap/click_h"
                        android:text="  ০৫ নভেম্বর ২০১৬"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>