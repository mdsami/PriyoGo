<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="@string/version_key"
        android:summary="@string/app_version"
        android:title="@string/app_name" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/share_location_key"
        android:summary="Want to share your location to get nearby updates ?"
        android:title="@string/share_my_location" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/share_dob_key"
        android:summary="Want to make your date of birth public in phone directory ?"
        android:title="Share Date of Birth" />


</PreferenceScreen>
